    <servlet>
        <!--Declare the servlet name-->
        <servlet-name>RESTServer</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

        <!--This tells Jersey which class to use to handle the request-->
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.restserver</param-value>
        </init-param>

        <!--This enables support for JSON-->
